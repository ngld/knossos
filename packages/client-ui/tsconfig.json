{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "target": "ES2020",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["../api/api/*"]
    },
    "typeRoots": ["node_modules/@types", "../front/types"],
    "types": ["node", "unplugin-icons/types/react"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/global.d.ts"]
}
